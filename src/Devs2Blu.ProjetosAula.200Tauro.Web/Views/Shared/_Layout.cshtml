<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>200Tauro</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Devs2Blu.ProjetosAula._200Tauro.Web.styles.css" asp-append-version="true" />
	<link rel="shortcut icon" src="~/img/LogoDuzenTauro.png">
	<script src="https://kit.fontawesome.com/652bfbc77f.js" crossorigin="anonymous"></script>
</head>
<body class="m-0">
	<div class="row flex-column" style="min-height: 100vh;">
		<header>
			<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow p-3">
				<div class="container-fluid d-flex justify-content-between align-items-center">
					<div class="d-flex flex-grow-1 ps-5">
						<a class="navbar-brand text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/LogoDuzenTauro.png" alt="200Tauro" width="80" height="80"></a>
						<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
								aria-expanded="false" aria-label="Toggle navigation">
							<span class="navbar-toggler-icon"></span>
						</button>
						<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
							<ul class="navbar-nav flex-grow-1">
								<li class="nav-item">
									<a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
								</li>
                <li class="nav-item">
                  <a class="nav-link text-dark" asp-area="" asp-controller="Categorias" asp-action="Index">Categorias</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link text-dark" asp-area="" asp-controller="Conteudos" asp-action="Index">Conteudos</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link text-dark" asp-area="" asp-controller="Imagens" asp-action="Index">Imagens</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link text-dark" asp-area="" asp-controller="Newsletters" asp-action="Index">Newsletters</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link text-dark" asp-area="" asp-controller="ConfiguracaoSistemas" asp-action="Index">ConfiguracaoSistemas</a>
                </li>
							</ul>
						</div>
					</div>
					<div class="flex-grow-1">
						<form class="pt-3">
							<div class="input-group mb-3">
								<span class="input-group-text" id="search-bar-span"><i class="fa-solid fa-magnifying-glass"></i></span>
								<input type="text" id="search-bar" class="form-control" placeholder="O que está procurando?" aria-label="Perquisa">
							</div>
						</form>
					</div>
					<div class="flex-grow-1 d-flex justify-content-end pe-5">
						<ul class="navbar-nav">
							<li class="nav-item">
								<a class="nav-link text-white" asp-area="" asp-controller="" asp-action=""><i class="fa-solid fa-2xl fa-heart"></i></a>
							</li>
						</ul>
					</div>
				</div>
			</nav>
		</header>
		<div class="container flex-grow-1">
			<main role="main" class="pb-3">
				@RenderBody()
			</main>
		</div>
		<footer class="border-top footer text-white bg-primary pt-3">
			<div class="container mx-auto">
				<div class="row text-center">
					<p>&copy; 2022 - 200Tauro - <a class="text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
				</div>
			</div>
		</footer>
	</div>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
